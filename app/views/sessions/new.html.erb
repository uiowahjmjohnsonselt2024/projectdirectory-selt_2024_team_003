<div id="login-page">
  <div class="video-overlay">
    <video class="background-video" autoplay loop muted playsinline>
      <source src="<%= asset_path('test.mov') %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>

  <div class="login-container">
    <h2>Login</h2>

    <%= form_tag login_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :login, "Username or Email" %>
        <%= text_field_tag :login, nil, class: 'form-control', placeholder: "Enter your username or email" %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Enter your password" %>
      </div>

      <div class="form-group">
        <%= submit_tag "Login", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <% if flash[:alert].present? %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= link_to 'Create Account', create_button_path, class: 'create-account-link' %>
  </div>
</div>
